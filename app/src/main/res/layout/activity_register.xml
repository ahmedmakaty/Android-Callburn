<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="callburn.app.callburn.Register">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="Email address"
                android:textAlignment="center"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/password_repeat"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/error"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/error_oval"/>

                <TextView
                    android:id="@+id/error_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#df635d"
                    android:text="Empty field"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_btn"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_border1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/postal_code_icon_copy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:text="Sign up with Email Address"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/face_btn"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/facebook_border">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/postal_code_icon_copy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:text="Sign up with Facebook"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/google_btn"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/google_border">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/postal_code_icon_copy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:text="Sign up with Google+"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="By clicking one of Sign Up buttons, you agree to the CallBurn service agreement, privacy policy and terms and conditions"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="12dp"
                android:layout_margin="5dp"/>

        </LinearLayout>



    </ScrollView>

</RelativeLayout>
