<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="callburn.app.callburn.Verify">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_verify" />

    <callburn.app.callburn.Utils.CEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/verifyCode"
        android:layout_below="@+id/app_bar"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="77dp"
        android:imeOptions="actionDone"/>

    <TextView
        android:layout_below="@+id/verifyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You should receive a Callburn Voice Message with your verification code in some seconds.\n Insert verification code to confirm your identity"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAlignment="center"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haven't you received verification code?"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"/>


</RelativeLayout>
